<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_calculate_ll"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_calculate_index_tv"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border_left_top_bottom"
        android:gravity="center"
        android:text="序号" />

    <TextView
        android:id="@+id/item_calculate_st_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:text="冲动等级" />

    <TextView
        android:id="@+id/item_calculate_level_tv"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@drawable/textview_border_right_top_bottom"
        android:gravity="center"
        android:text="时间" />

</LinearLayout>